<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            style="@style/text_20"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_80sdp"
            android:text="Create Account"
            android:textColor="@color/blue_login"
            android:textStyle="bold"
            />

        <TextView
            style="@style/text_20"
            android:text="Create an Account so you can explore all the \nexisting jobs"
            android:layout_gravity="center"
            android:textSize="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAlignment="center"
            android:layout_margin="@dimen/_25sdp"
            />


        <EditText
            android:id="@+id/singup_name"
            style="@style/edit_text"
            android:layout_marginBottom="@dimen/_7sdp"
            android:hint="Name"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="@dimen/_5sdp"
            />


        <EditText
            android:id="@+id/signup_email"
            style="@style/edit_text"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="@dimen/_7sdp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/singup_contact"
            style="@style/edit_text"
            android:hint="Contact Number"
            android:inputType="phone"
            android:drawableLeft="@drawable/ic_lock"
            android:maxLength="10"
            android:drawablePadding="@dimen/_5sdp"
            />


        <EditText
            android:id="@+id/singup_password"
            style="@style/edit_text"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="@dimen/_5sdp"
            />

        <EditText
            android:id="@+id/signup_cnfpassword"
            style="@style/edit_text"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="@dimen/_5sdp"
            />






        <TextView
            android:id="@+id/signup_already_account"
            style="@style/text_16"
            android:text="Already Have An Account"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            />

        <Button
            android:id="@+id/signup_button"
            style="@style/button_18"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Signup"
            app:backgroundTint="@null"
            android:layout_marginBottom="@dimen/_30sdp"
            />

    </LinearLayout>


</ScrollView>