<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".DashboardActivity">

    <TextView
        android:id="@+id/dashboard_welcome"
        style="@style/text_20"
        android:text="WELCOME Username"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        />

    <Button
        android:id="@+id/dashboard_profile"
        style="@style/button_18"
        android:text="Profile"
        android:layout_marginTop="@dimen/_20sdp"
        app:backgroundTint="@null"
        />

    <Button
        android:id="@+id/dashboard_category"
        style="@style/button_18"
        android:text="Categry"
        android:layout_marginTop="@dimen/_10sdp"
        app:backgroundTint="@null"
        />

    <Button
        android:id="@+id/dashboard_logout"
        style="@style/button_18"
        android:text="Logout"
        android:layout_marginTop="@dimen/_10sdp"
        app:backgroundTint="@null"
        />
    <Button
        android:id="@+id/dashboard_delete_profile"
        style="@style/button_18"
        android:text="Delete Profile"
        android:layout_marginTop="@dimen/_10sdp"
        app:backgroundTint="@null"
        />

</LinearLayout>